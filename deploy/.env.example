# =========================================================
# LIFE System - Server Environment Configuration
# =========================================================
# Server: 192.168.1.237 (io-surf)
# This file is pre-configured for the local Ubuntu server
# Just copy to .env - no changes needed for basic deployment
# =========================================================

# ===========================================
# SECURITY (Change this in production!)
# ===========================================
SECURITY_JWT_SECRET=MySecretKeyForJWTTokenGeneration2024AtLeast32Characters
SECURITY_JWT_EXPIRATION=PT1H

# ===========================================
# NETWORK CONFIGURATION
# ===========================================
# Port exposed to the outside world (access via http://192.168.1.237:1011)
NGINX_ROOT_PROXY_EXTERNAL_PORT=1011

# Internal service ports (don't change unless ports conflict)
API_GATEWAY_PORT=8011
API_GATEWAY_HOST_PORT=8011
USER_SERVICE_PORT=8012
MASTERDATA_SERVICE_PORT=8013
INVENTORY_SERVICE_PORT=8014
ORDER_PROCESSING_SERVICE_PORT=8015
SIMAL_INTEGRATION_SERVICE_PORT=8016

# ===========================================
# CORS - Allowed Origins (pre-configured for this server)
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:1011,http://192.168.1.237:1011,http://io-surf:1011,https://lego.nji.io

# ===========================================
# SPRING PROFILE
# ===========================================
SPRING_PROFILES_ACTIVE=prod

# ===========================================
# DATABASE CONFIGURATION (H2 In-Memory)
# ===========================================
H2_DB_USER_PATH=jdbc:h2:mem:lego_factory_auth;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
H2_DB_MASTERDATA_PATH=jdbc:h2:mem:masterdata_db;DB_CLOSE_DELAY=-1
H2_DB_INVENTORY_PATH=jdbc:h2:mem:inventory_db;DB_CLOSE_DELAY=-1
H2_DB_ORDER_PROCESSING_PATH=jdbc:h2:mem:orders_db;DB_CLOSE_DELAY=-1
H2_DB_SIMAL_INTEGRATION_PATH=jdbc:h2:mem:simal_db;DB_CLOSE_DELAY=-1
H2_CONSOLE_ENABLED=false

# ===========================================
# ORDER PROCESSING CONFIGURATION
# ===========================================
LOT_SIZE_THRESHOLD=3
MAX_ORDER_ITEMS=100
STOCK_RESERVE_MINUTES=30
STOCK_SAFETY_MARGIN_PERCENT=10
MAX_RETRIES=3
MASTERDATA_TIMEOUT_MS=5000
INVENTORY_TIMEOUT_MS=10000
SIMAL_TIMEOUT_MS=30000
ENABLE_CACHING=false
ENABLE_ASYNC_PROCESSING=false
ENABLE_CIRCUIT_BREAKER=false
ENABLE_DETAILED_LOGGING=false
ENABLE_AUTO_STATUS_PROPAGATION=true
